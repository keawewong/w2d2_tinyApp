<html>

<%-include('partials/_headTag.ejs') %>

  <body>
    <%-include('partials/_header.ejs') %>

      <div class="container">
        <h3 class="col-md-12">Log in please</h3>
        <div class="col-md-12">

          <div class="row">
            <!-- Bootstrap form -->
            <form action="/urls/login" method="POST">
              <!-- class="form-group" -->
              <div class="clearfix"></div>
              <div class="form-group col-md-6">
                <label class="control-label" for="inputName">E-mail</label>
                <input class="form-control" type="text" name="email" placeholder="your@email.here">
              </div>
              <!-- class="form-group" -->
              <div class="clearfix"></div>
              <div class="form-group col-md-6">
                <label class="control-label" for="inputName">Password</label>
                <input class="form-control" type="password" name="password" placeholder="your password here">
              </div>
              <!-- class="form-group -->
              <div class="clearfix"></div>
              <div class="form-group col-md-1">
                <button class="btn btn-primary" type="submit">Log In <span class="glyphicon glyphicon-log-in"></span></button>
              </div>
            </form>
            <!-- End Bootstrap form -->

          </div>
          <!-- class="row" -->
        </div>
        <!-- class="col-md-12" -->

      </div>
  </body>
  <!-- class="container" -->

